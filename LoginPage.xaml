<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTrackerMAUI.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">

        <Label Text="Login to Expense Tracker"
               FontSize="24"
               HorizontalOptions="Center"
               FontAttributes="Bold" />

        <Entry x:Name="usernameEntry" Placeholder="Username" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Register" Clicked="OnRegisterClicked" />

        <Label x:Name="messageLabel" TextColor="Red" FontAttributes="Italic" />

    </VerticalStackLayout>
</ContentPage>
